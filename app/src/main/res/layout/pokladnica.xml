<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
    <EditText
    android:id="@+id/inputAll"
    android:visibility="gone"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_margin="5dp"
        android:layout_marginBottom="15dp"
        android:singleLine="true"
        android:inputType="number"/>

    <TextView
    android:id="@+id/inputAllUser"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
        
    <TextView
    android:id="@+id/inputAllServer"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    
    <TextView
    android:id="@+id/hladaj1"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    
    <TextView
    android:id="@+id/hladaj2"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    
    <TextView
    android:id="@+id/hladaj3"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    

     
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">      
 
        <Button android:id="@+id/btnPrevt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/popishore"
        android:layout_weight="1"/>
        
        <TextView
    	android:id="@+id/obsahKosika"
        android:layout_weight="1"
        android:textSize="15sp"
    	android:visibility="visible"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" />
        
        <Button android:id="@+id/btnNextt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
                 
    
     </LinearLayout>
    
    <!-- Main ListView
         Always give id value as list(@android:id/list)
    -->
    
    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
 
</LinearLayout>