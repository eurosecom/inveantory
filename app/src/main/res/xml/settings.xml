        android:key="druhid"
        android:defaultValue="0"
        android:enabled="false"
        android:summary="@string/druhid_summary"
        android:title="@string/druhid_title" />
    
    <EditTextPreference
        android:key="fir"
        android:enabled="false"
        android:summary="@string/fir_summary"
        android:title="@string/fir_title" />
    
    <EditTextPreference
        android:key="ftpserver"
        android:summary="@string/ftpserver_popis"
