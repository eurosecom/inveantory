    <EditTextPreference
        android:key="ftppsw"
        android:summary="@string/ftppsw_popis"
        android:title="@string/ftppsw_title" />
    
    <EditTextPreference
        android:key="nostnum"
        android:defaultValue="1"
        android:summary="@string/nostnum_summary"
        android:title="@string/nostnum_title" />
    
    <EditTextPreference
        android:key="nostname"
        android:defaultValue="item"
        android:summary="@string/nostname_summary"
        android:title="@string/nostname_title" />
    
    <EditTextPreference
        android:key="nostprice"
        android:defaultValue="1"
        android:summary="@string/nostprice_summary"
        android:title="@string/nostprice_title" />
    
    <EditTextPreference
        android:key="nostvol"
        android:defaultValue="1"
        android:summary="@string/nostvol_summary"
        android:title="@string/nostvol_title" />
    
    <EditTextPreference
        android:key="nostmer"
        android:defaultValue="ks"
        android:summary="@string/nostmer_summary"
        android:title="@string/nostmer_title" />
        
</PreferenceScreen>